        android:src="@drawable/info" />
    <ImageView
        android:id="@+id/imgv_go_to"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="70dp"
        android:layout_toRightOf="@+id/imgv_suiv_ronde5"
        android:src="@drawable/right_arrow_list" />

    <TextView
        android:id="@+id/ronde_timetxtv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/imgv_suiv_ronde1"

        android:layout_marginTop="5dp"
        android:text="@string/dernier_pointage"
        />

    <TextView
        android:id="@+id/ronde_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
